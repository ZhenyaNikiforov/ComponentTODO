{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "commonjs": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "rules": {
        "camelcase": 1,
        "no-nested-ternary": 1,
        "no-template-curly-in-string": 1,
        "no-self-compare": 1,
        "max-len": [
            "error",
            {
              "ignoreUrls": true,
              "ignoreComments": true,
              "ignoreRegExpLiterals": true,
              "code": 100
            }
          ]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true
}
