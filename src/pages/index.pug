doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
h1(class='first-caption') Страница компонентов  
include ../components/todo/todo.pug
div(class='component-wrapper component-wrapper_first')
  +todo("firstComponent")
div(class='component-wrapper component-wrapper_second')
  +todo("secondComponent")
div(class='component-wrapper component-wrapper_third')
  +todo("thirdComponent")
div(class='component-wrapper component-wrapper_fourth')
  +todo("fourthComponent")
-
  import Todo from '../components/todo/todo.js';

  const arrayOfIdentifiers= ["#firstComponent", "#secondComponent", "#thirdComponent", "#fourthComponent"];
  arrayOfIdentifiers.forEach(currentElement => {
      new Todo(".TODO-container__button", ".TODO-container__text", ".TODO-container__list", ".TODO-container__counter", currentElement);
  });